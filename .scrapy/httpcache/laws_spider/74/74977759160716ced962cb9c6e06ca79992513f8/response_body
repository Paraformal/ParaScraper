                                <tr>
                                    <td></td>
                                    <td class="ArticleText">
                                        <p>&nbsp;يتولى التصفية محاسب المصلحة. </p>
                                    </td>
                                </tr>
                            
                                <tr>
                                    <td colspan="2" class="Sep"></td>
                                </tr>
                            
